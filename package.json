{
  "name": "kontexto-ia",
  "private": true,
  "description": "Sistema inteligente de análisis y documentación de código con IA",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "pnpm exec turbo build",
    "dev": "pnpm exec turbo dev",
    "lint": "pnpm exec turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm exec turbo test",
    "test:e2e": "pnpm exec turbo test:e2e",
    "clean": "pnpm exec turbo clean",
    "typecheck": "pnpm exec turbo typecheck"
  },
  "devDependencies": {
    "turbo": "^1.10.16",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}